{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run main.py",
      "type": "shell",
      "command": "python",
      "args": [
        "${workspaceFolder}/main.py"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": {
        "owner": "python",
        "fileLocation": ["relative", "${workspaceFolder}"],
        "pattern": {
          "regexp": "^(.*):(\\d+):(\\d+): (.*)$",
          "file": 1,
          "line": 2,
          "column": 3,
          "message": 4
        }
      },
      "presentation": {
        "reveal": "always",
        "panel": "dedicated"
      },
      "detail": "Runs main.py located in the workspace root."
    },
    {
        "label": "Build Cython",
        "type": "shell",
        "command": "python setup.py build_ext --inplace",
        "group": {
            "kind": "build",
            "isDefault": true
        },
        "problemMatcher": []
    }
  ]
}
